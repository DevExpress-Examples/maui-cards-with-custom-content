<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:viewModels="clr-namespace:ObjectCard.ViewModels"
             x:Class="ObjectCard.Views.ChannelsDonutView" >
    <ContentView.BindingContext>
        <viewModels:ChannelDonutViewModel/>
    </ContentView.BindingContext>
    <dx:PieChartView>
        <dx:PieChartView.Series>
            <dx:DonutSeries>
                <dx:DonutSeries.Data>
                    <dx:PieSeriesDataAdapter DataSource="{Binding TrafficChannelsData}" LabelDataMember="ChannelName" ValueDataMember="Value"/>
                </dx:DonutSeries.Data>
                <dx:DonutSeries.Label>
                    <dx:PieSeriesLabel Position="Inside" TextPattern="{}{V}">
                        <dx:PieSeriesLabel.Style>
                            <dx:PieSeriesLabelStyle>
                                <dx:PieSeriesLabelStyle.TextStyle>
                                    <dx:TextStyle Size="12" Color="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray950}}" />
                                </dx:PieSeriesLabelStyle.TextStyle>
                            </dx:PieSeriesLabelStyle>
                        </dx:PieSeriesLabel.Style>
                    </dx:PieSeriesLabel>
                </dx:DonutSeries.Label>
                <dx:DonutSeries.CenterLabel>
                    <dx:PieCenterTextLabel TextPattern="Sources"/>
                </dx:DonutSeries.CenterLabel>
            </dx:DonutSeries>
        </dx:PieChartView.Series>
        <dx:PieChartView.Legend>
            <dx:Legend Orientation="TopToBottom"
                    HorizontalPosition="RightOutside"
                    VerticalPosition="Center">
                <dx:Legend.Style>
                    <dx:LegendStyle ItemsVerticalIndent="20" IndentFromDiagram="20" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=Black}" >
                        <dx:LegendStyle.TextStyle>
                            <dx:TextStyle Size="14" Color="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource White}}" />
                        </dx:LegendStyle.TextStyle>
                    </dx:LegendStyle>
                </dx:Legend.Style>
            </dx:Legend>
        </dx:PieChartView.Legend>
        <dx:PieChartView.ChartStyle>
            <dx:PieChartStyle Palette="{Binding TrafficColors}" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=Black}"/>
        </dx:PieChartView.ChartStyle>
    </dx:PieChartView>
</ContentView>
